@{
    var rolUsuario = Session["RolUsuario"] != null ? Session["RolUsuario"].ToString() : "";
}
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema Académico</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .sidebar { min-height: calc(100vh - 56px); background-color: #343a40; }
        .sidebar .nav-link { color: #adb5bd; }
        .sidebar .nav-link:hover { color: #fff; background-color: #495057; }
        .sidebar .nav-link.active { color: #fff; background-color: #0d6efd; }
        .content-wrapper { min-height: calc(100vh - 56px); }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
        <div class="container-fluid">
            @Html.ActionLink("Sistema Académico", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>

                        if (rolUsuario == "Administrador" || rolUsuario == "Coordinador")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Usuarios</a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Lista de Usuarios", "Index", "Usuarios", null, new { @class = "dropdown-item" })</li>
                                    @if (rolUsuario == "Administrador")
                                    {
                                        <li>@Html.ActionLink("Crear Usuario", "Crear", "Usuarios", null, new { @class = "dropdown-item" })</li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>@Html.ActionLink("Gestión de Roles", "Roles", "Usuarios", null, new { @class = "dropdown-item" })</li>
                                    }
                                </ul>
                            </li>
                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Cursos</a>
                            <ul class="dropdown-menu">
                                @if (rolUsuario == "Estudiante")
                                {
                                    <li>@Html.ActionLink("Mis Cursos", "MisCursos", "Cursos", null, new { @class = "dropdown-item" })</li>
                                    <li>@Html.ActionLink("Matricular Curso", "Disponibles", "Cursos", null, new { @class = "dropdown-item" })</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Lista de Cursos", "Index", "Cursos", null, new { @class = "dropdown-item" })</li>
                                    if (rolUsuario == "Administrador")
                                    {
                                        <li>@Html.ActionLink("Crear Curso", "Crear", "Cursos", null, new { @class = "dropdown-item" })</li>
                                    }
                                }
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Historial</a>
                            <ul class="dropdown-menu">
                                @if (rolUsuario == "Estudiante")
                                {
                                    <li>@Html.ActionLink("Mi Historial", "MiHistorial", "Historial", null, new { @class = "dropdown-item" })</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Buscar Estudiante", "Index", "Historial", null, new { @class = "dropdown-item" })</li>
                                }
                            </ul>
                        </li>

                        if (rolUsuario == "Administrador")
                        {
                            <li class="nav-item">@Html.ActionLink("Bitácora", "Index", "Bitacora", null, new { @class = "nav-link" })</li>
                        }
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                @Session["NombreUsuario"] <span class="badge bg-light text-dark">@Session["RolUsuario"]</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>@Html.ActionLink("Cerrar Sesión", "Logout", "Cuenta", null, new { @class = "dropdown-item" })</li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("Iniciar Sesión", "Login", "Cuenta", null, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <main class="col-12 px-4 py-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="bg-dark text-light py-3 mt-4">
        <div class="container text-center">
            <p class="mb-0">@DateTime.Now.Year - Sistema Académico - PAW Proyecto #2</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
