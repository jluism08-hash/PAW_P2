@{
    ViewBag.Title = "Historial Académico";
}

<div class="container">
    <h2>Buscar Estudiante</h2>
    <hr />

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" id="termino" placeholder="Buscar por nombre, matrícula o correo..." />
                <button class="btn btn-primary" onclick="buscarEstudiantes()">Buscar</button>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Resultados de Búsqueda</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Identificación</th>
                            <th>Correo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="resultados">
                        <tr>
                            <td colspan="4" class="text-center text-muted">Ingrese un término de búsqueda</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function buscarEstudiantes() {
            var termino = $('#termino').val();
            if (!termino || termino.length < 2) {
                alert('Ingrese al menos 2 caracteres para buscar');
                return;
            }

            $.get('/api/historial/buscar?termino=' + encodeURIComponent(termino), function (estudiantes) {
                var tbody = $('#resultados');
                tbody.empty();

                if (estudiantes.length === 0) {
                    tbody.append('<tr><td colspan="4" class="text-center">No se encontraron estudiantes</td></tr>');
                    return;
                }

                estudiantes.forEach(function (est) {
                    tbody.append('<tr>' +
                        '<td>' + est.nombreCompleto + '</td>' +
                        '<td>' + (est.identificacion || '-') + '</td>' +
                        '<td>' + est.correo + '</td>' +
                        '<td><a href="/Historial/Estudiante/' + est.usuarioId + '" class="btn btn-sm btn-info">Ver Historial</a></td>' +
                        '</tr>');
                });
            }).fail(function (xhr) {
                alert('Error: ' + (xhr.responseJSON?.message || 'Error al buscar'));
            });
        }

        $('#termino').keypress(function (e) {
            if (e.which === 13) {
                buscarEstudiantes();
            }
        });
    </script>
}
