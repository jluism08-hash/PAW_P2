@{
    ViewBag.Title = "Crear Rol";
}

<div class="container">
    <h2>Crear Rol</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form id="formCrear">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nombre del Rol *</label>
                                <input type="text" class="form-control" id="nombre" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Descripci√≥n</label>
                                <input type="text" class="form-control" id="descripcion" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Permisos</label>
                            <div id="listaPermisos" class="border rounded p-3" style="max-height: 300px; overflow-y: auto;">
                                <p class="text-center">Cargando permisos...</p>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                            <a href="@Url.Action("Roles")" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            cargarPermisos();

            $('#formCrear').submit(function (e) {
                e.preventDefault();
                guardarRol();
            });
        });

        function cargarPermisos() {
            $.get('/api/roles/permisos', function (permisos) {
                var contenedor = $('#listaPermisos');
                contenedor.empty();

                var moduloActual = '';
                permisos.forEach(function (p) {
                    if (p.modulo !== moduloActual) {
                        contenedor.append('<h6 class="mt-2 mb-1">' + p.modulo + '</h6>');
                        moduloActual = p.modulo;
                    }
                    contenedor.append(
                        '<div class="form-check">' +
                        '<input class="form-check-input" type="checkbox" value="' + p.permisoId + '" id="permiso' + p.permisoId + '">' +
                        '<label class="form-check-label" for="permiso' + p.permisoId + '">' + p.nombre + ' - ' + p.descripcion + '</label>' +
                        '</div>'
                    );
                });
            });
        }

        function guardarRol() {
            var permisosSeleccionados = [];
            $('#listaPermisos input:checked').each(function () {
                permisosSeleccionados.push(parseInt($(this).val()));
            });

            var datos = {
                nombre: $('#nombre').val(),
                descripcion: $('#descripcion').val(),
                permisosIds: permisosSeleccionados,
                usuarioCreadorId: @(Session["UsuarioId"] ?? 0)
            };

            $.ajax({
                url: '/api/roles',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(datos),
                success: function () {
                    alert('Rol creado exitosamente');
                    window.location.href = '/Usuarios/Roles';
                },
                error: function (xhr) {
                    alert('Error: ' + (xhr.responseJSON?.message || 'No se pudo crear el rol'));
                }
            });
        }
    </script>
}
