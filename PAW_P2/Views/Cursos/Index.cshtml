@{
    ViewBag.Title = "Gestión de Cursos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Gestión de Cursos</h2>
        @if (Session["RolUsuario"]?.ToString() == "Administrador")
        {
            <a href="@Url.Action("Crear")" class="btn btn-primary">Nuevo Curso</a>
        }
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Créditos</th>
                            <th>Cuatrimestre</th>
                            <th>Docentes</th>
                            <th>Estudiantes</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="cuerpoTabla">
                        <tr>
                            <td colspan="7" class="text-center">Cargando...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var esAdmin = '@Session["RolUsuario"]' === 'Administrador';

        $(document).ready(function () {
            cargarCursos();
        });

        function cargarCursos() {
            $.get('/api/cursos', function (datos) {
                var cuerpo = $('#cuerpoTabla');
                cuerpo.empty();

                if (datos.length === 0) {
                    cuerpo.append('<tr><td colspan="7" class="text-center">No hay cursos registrados</td></tr>');
                    return;
                }

                datos.forEach(function (curso) {
                    var acciones = '<a href="/Cursos/Detalle/' + curso.cursoId + '" class="btn btn-sm btn-info">Ver</a> ';
                    if (esAdmin) {
                        acciones += '<a href="/Cursos/Editar/' + curso.cursoId + '" class="btn btn-sm btn-warning">Editar</a> ' +
                                   '<a href="/Cursos/AsignarDocente/' + curso.cursoId + '" class="btn btn-sm btn-success">Asignar</a> ' +
                                   '<button class="btn btn-sm btn-danger" onclick="eliminarCurso(' + curso.cursoId + ')">Eliminar</button>';
                    }

                    var fila = '<tr>' +
                        '<td><strong>' + curso.codigo + '</strong></td>' +
                        '<td>' + curso.nombre + '</td>' +
                        '<td>' + curso.creditos + '</td>' +
                        '<td>' + curso.cuatrimestre + '</td>' +
                        '<td><span class="badge bg-primary">' + curso.cantidadDocentes + '</span></td>' +
                        '<td><span class="badge bg-secondary">' + curso.cantidadEstudiantes + '</span></td>' +
                        '<td>' + acciones + '</td>' +
                        '</tr>';
                    cuerpo.append(fila);
                });
            });
        }

        function eliminarCurso(id) {
            if (confirm('¿Está seguro de eliminar este curso?')) {
                $.ajax({
                    url: '/api/cursos/' + id + '?usuarioEliminadorId=' + @(Session["UsuarioId"] ?? 0),
                    type: 'DELETE',
                    success: function () {
                        alert('Curso eliminado exitosamente');
                        cargarCursos();
                    },
                    error: function (xhr) {
                        alert('Error: ' + (xhr.responseJSON?.message || 'No se pudo eliminar el curso'));
                    }
                });
            }
        }
    </script>
}
