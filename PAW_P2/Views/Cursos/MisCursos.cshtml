@{
    ViewBag.Title = "Mis Cursos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Mis Cursos Matriculados</h2>
        <a href="@Url.Action("Disponibles")" class="btn btn-primary">Matricular Nuevo Curso</a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Codigo</th>
                            <th>Nombre</th>
                            <th>Creditos</th>
                            <th>Cuatrimestre</th>
                            <th>Docentes</th>
                            <th>Fecha Matricula</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="cuerpoTabla">
                        <tr>
                            <td colspan="7" class="text-center">Cargando...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var estudianteId = @(Session["UsuarioId"] ?? 0);

        $(document).ready(function () {
            cargarMisCursos();
        });

        function cargarMisCursos() {
            $.get('/api/cursos/mis-cursos/' + estudianteId, function (datos) {
                var cuerpo = $('#cuerpoTabla');
                cuerpo.empty();

                if (datos.length === 0) {
                    cuerpo.append('<tr><td colspan="7" class="text-center">No tienes cursos matriculados</td></tr>');
                    return;
                }

                datos.forEach(function (curso) {
                    var fecha = new Date(curso.fechaInscripcion).toLocaleDateString();
                    var docentes = curso.docentes && curso.docentes.length > 0 ? curso.docentes.join(', ') : 'Sin asignar';

                    var fila = '<tr>' +
                        '<td><strong>' + curso.codigo + '</strong></td>' +
                        '<td>' + curso.nombre + '</td>' +
                        '<td>' + curso.creditos + '</td>' +
                        '<td>' + curso.cuatrimestre + '</td>' +
                        '<td>' + docentes + '</td>' +
                        '<td>' + fecha + '</td>' +
                        '<td>' +
                        '<a href="/Cursos/Detalle/' + curso.cursoId + '" class="btn btn-sm btn-info">Ver</a> ' +
                        '<button class="btn btn-sm btn-danger" onclick="retirarCurso(' + curso.cursoId + ')">Retirar</button>' +
                        '</td>' +
                        '</tr>';
                    cuerpo.append(fila);
                });
            }).fail(function () {
                $('#cuerpoTabla').html('<tr><td colspan="7" class="text-center text-danger">Error al cargar cursos</td></tr>');
            });
        }

        function retirarCurso(cursoId) {
            if (confirm('Â¿Esta seguro de retirarse de este curso?')) {
                $.ajax({
                    url: '/api/cursos/' + cursoId + '/retirar/' + estudianteId,
                    type: 'DELETE',
                    success: function () {
                        alert('Retiro realizado exitosamente');
                        cargarMisCursos();
                    },
                    error: function (xhr) {
                        alert('Error: ' + (xhr.responseJSON?.message || 'No se pudo realizar el retiro'));
                    }
                });
            }
        }
    </script>
}
